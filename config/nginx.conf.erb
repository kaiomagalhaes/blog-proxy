worker_processes  2;
error_log /dev/stdout info;

daemon off;

events {
	worker_connections 256;
}

http {
	access_log /dev/stdout;
	server {
		listen 8080;

		location / {
			proxy_pass "http://codelitt.com";
			proxy_http_version 1.1;
			proxy_buffering off;
		}
		
		location /blog {
			proxy_pass "http://blog.codelitt.dev";	
			proxy_http_version 1.1;
			proxy_buffering off;
		}

		if ($http_x_forwarded_proto != "https") {
			rewrite ^(.*)$ https://$host$1 permanent;
		}
	}
}