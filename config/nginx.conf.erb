worker_processes  2;
error_log /dev/stdout info;

daemon off;

events {
	worker_connections 256;
}

http {
	access_log /dev/stdout;
	server {
		listen <%= ENV["PORT"] %>;

		location / {
			proxy_pass "http://codelitt.com";
			proxy_set_header Host $host;
		}
		
		location /blog {
			proxy_pass "http://blog.codelitt.dev";	
			proxy_set_header Host $host;
		}
	}
}